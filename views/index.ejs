<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheet.css">
</head>
<body>
    <form action="/submit" method="POST" id="add">
        <h1>Add User</h1>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">First Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Your First Name" name="fname">
          </div>
          <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Your Last Name" name="lname">
          </div>
        <input type="submit" value="Submit" id="button">
    </form>
    <% if (typeof alertMessage !== 'undefined' && alertMessage !== null) { %>
        <script>
            alert('<%= alertMessage %>');
        </script>
    <% } %>
    <form action="/delete" method="POST" id="delete">
        <h1>Delete User</h1>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">User's ID</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="The Id of the user you would like to delete" name="id">
          </div>
          <input type="submit" value="Delete" id="button">
    </form>
</body>
</html>
